# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_USER=intellivend_user
DB_PASSWORD=your_secure_password_here
DB_NAME=intellivend
DB_HOST=mysql
DB_PORT=3306

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3000

# ==========================================
# SECURITY
# ==========================================
API_SECRET=your_api_secret_key_here
ESP32_API_KEY=your_esp32_api_key_here

# ==========================================
# EMAIL CONFIGURATION (Optional)
# For email notifications and alerts
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ALERT_EMAIL=alerts@yourdomain.com

# ==========================================
# MQTT CONFIGURATION (Optional)
# For ESP32 communication
# Use Home Assistant MQTT broker IP address
# ==========================================
MQTT_BROKER=192.168.1.XXX
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
