{
  "name": "IntelliVend",
  "version": "1.0.0",
  "slug": "intellivend",
  "description": "Intelligens italautomata rendszer ESP32 vezérléssel",
  "url": "https://github.com/yourusername/IntelliVend",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ports": {
    "8099/tcp": 8099,
    "3000/tcp": 3000
  },
  "ports_description": {
    "8099/tcp": "Web UI (Nginx)",
    "3000/tcp": "Backend API"
  },
  "ingress": true,
  "ingress_port": 8099,
  "panel_icon": "mdi:glass-cocktail",
  "panel_title": "IntelliVend",
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "auth_api": false,
  "host_network": false,
  "services": ["mqtt:want", "mysql:want"],
  "options": {
    "mysql_host": "core-mariadb",
    "mysql_port": 3306,
    "mysql_database": "intellivend",
    "mysql_user": "intellivend",
    "mysql_password": "",
    "mqtt_broker": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_password": "",
    "log_level": "info"
  },
  "schema": {
    "mysql_host": "str",
    "mysql_port": "port",
    "mysql_database": "str",
    "mysql_user": "str",
    "mysql_password": "password",
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_user": "str?",
    "mqtt_password": "password?",
    "log_level": "list(debug|info|warning|error)"
  },
  "image": "ghcr.io/{arch}-intellivend"
}
